<h6> No. of Feedbacks: <%= pluralize(@comments.count, "Comment") %> </h6>

<% @comments.each do |comment| %>

  <p><b><%= comment.user.email %></p>
  <p><%= comment.content %></p>
  <% if current_user == comment.user %>
    <%= link_to "Delete comment", [comment.helper, comment], method: :delete %>
    <%= link_to "Edit comment", edit_helper_comment_path(comment.helper, comment) %>
  <% end %>
<% end %>

<%= render 'comments/form' %>
